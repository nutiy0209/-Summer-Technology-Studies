<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:anroid="http://schemas.android.com/aapt">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="3dp"></stroke>
            <solid android:color="@color/cardview_shadow_end_color"></solid>
            <corners android:radius="4dp"></corners>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="10dp" android:color="@color/white"></stroke>
            <solid android:color="#3AB1E8"></solid>
            <corners android:radius="10dp"></corners>
        </shape>
    </item>

</selector>